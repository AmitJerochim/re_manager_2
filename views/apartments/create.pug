extends ../layouts/layout.pug
block header
    include ../includes/header.pug
block content
    main
        div(class="page-header")
            h1 Neue Wohnung hinzufügen
        div(class="container")
            form(action="/apartments/store" method="POST")
                input(type="hidden" name="building_id" value=building_id)
                div(class="form-group")
                    label(for="apartment_indication") Wohnungsbezeichnung
                    input(type="text" pattern="[1-9][0-9]{0,2}" class="form-control" id="apartment_indication" placeholder="z.B. 22 für WE 22" name="apartment_indication" required)
                div(class="form-group")
                    label(for="apartment_size") Wohnläche in m
                    input(type="text" pattern="[1-9][0-9]{0,2}([.,][0-9]{1,2})?" class="form-control" id="apartment_size" placeholder="z.B. 75" name="apartment_size" required)
                div(class="form-group")
                    label(for="heating_area") Heizfläche
                    input(type="text" pattern="[1-9][0-9]{1,2}([.,][0-9]{1,2})?" class="form-control" id="heating_area" placeholder="z.B. 32" name="heating_area" required)
                div(class="form-group")
                    label(for="apartment_floor") Etage
                    input(type="text" pattern="[0-9][0-9]?" class="form-control" id="apartment_floor" placeholder="z.B. 1 für 1.OG oder 0 für EG" name="apartment_floor" required)
                div(class="form-check")
                    input(type="checkbox" class="form-check-input" id="is_rented" name="is_rented" value="1")
                    label(class="form-check-label" for="is_rented") Mieter vorhanden
                div(id="tenant_container" style="display: none;")
                button(type="submit" class="btn btn-primary") Submit
            div(class="clonable" style="display: none;")
                input(type="hidden" name="current_tenant" value="1")
                div(class="form-group")
                    label(for="first_name") Vorname
                    input(type="text" pattern="[A-Z][a-zöäü]+((\\s[A-Z][a-zöäü]+)+([,]\\s[A-Z][a-zöäü]+(\\s[A-Z][a-zöäü]+)+)*)?" class="form-control" id="first_name" placeholder="Max" name="first_name" required)    
                div(class="form-group")
                    label(for="last_name") Nachname
                    input(type="text" pattern="[A-Z][a-zöäü]+((\\s[A-Z][a-zöäü]+)+([,]\\s[A-Z][a-zöäü]+(\\s[A-Z][a-zöäü]+)+)*)?" class="form-control" id="last_name" placeholder="Mustermann" name="last_name" required)    
                div(class="form-group")
                    label(for="care_of") care of
                    input(type="text" pattern="[A-Z][a-zöäü]+(\\s[A-Z][a-zöäü]+)+([,]\\s[A-Z][a-zöäü]+(\\s[A-Z][a-zöäü]+)+)*" class="form-control" id="care_of" placeholder="Max Mustermann" name="care_of")    
                div(class="form-group")
                    label(for="street") Rechnungsanschrift Straße
                    input(type="text" pattern="[A-Z][a-zöäüß]+(\\s[A-Z][a-zöäüß]+)+([,]\\s[A-Z][a-zöäü]+(\\s[A-Z][a-zöäü]+)+)*" class="form-control" id="street" placeholder="790" name="street" required)
                div(class="form-group")
                    label(for="street_nr") Rechnungsanschrift Straße Straßennummer
                    input(type="text" pattern="[1-9][0-9]{1,3}([,.][0-9]{1,2})?" class="form-control" id="street_nr" placeholder="230" name="street_nr" required)
                div(class="form-group")
                    label(for="post_code") Postleitzahl
                    input(type="text" pattern="[0-9]{5}" class="form-control" id="post_code" placeholder="79045" name="post_code" required)
                div(class="form-group")
                    label(for="city") Stadt
                    input(type="text" pattern="[A-Z][a-z]*" class="form-control" id="city" placeholder="Berlin" name="city" required)
                div(class="form-group")
                    label(for="beginning_rental_period") Beginn des Mietverhältnisses
                div(class="input-group date" data-provide="datepicker")
                    input(type="date" class="form-control" name="beginning_rental_period")
                    div(class="input-group-addon")
                        span(class="glyphicon glyphicon-th")
                div(class="row")
                    div(class="col-md-6")
                        div(class="form-group")
                            label(for="net_cold_rent") Nettokaltmiete
                            input(type="text" pattern="[1-9][0-9]+([,.][0-9]{1,2})?" class="form-control" id="net_cold_rent" placeholder="535,53" name="net_cold_rent" required)
                    div(class="col-md-6")
                        div(class="form-group")
                            label(for="operation_costs") Vorauszahlungen auf Nebenkosten
                            input(type="text" pattern="[1-9][0-9]+([,.][0-9]{1,2})?" class="form-control" id="operation_costs" placeholder="294,4" name="operation_costs" required)
                   
            

