extends ../layouts/layout.pug
block header
    include ../includes/header.pug
block content
    main
        div(class='page-header')
             h1 Ausgabentypen
        div(class='container')
            a(href='/buildings/cost_positions/create' class='btn btn-warning')
                span(class='glyphicon glyphicon-add') Ausgabentyp hinzufügen
            table(class="table table-bordered")
                thead
                    tr
                        th ID
                        th Bezeichnung
                        th Ändern
                        th Löschen
                tbody
                each el, i in costTypes
                    tr
                        td= el.id
                        td= el.designation
                        td!='<a href="" class="btn btn-default">Details</a>'
                        td!='<a href="" class="btn btn-danger">Details</a>'
